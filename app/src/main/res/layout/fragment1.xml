<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/home_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/btnstopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="스톱워치"
            />

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/btnCheckBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혈당측정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:id="@+id/btnshowlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="혈당리스트" />

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:id="@+id/btngraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그래프 보기" />
    </LinearLayout>

    <!--김무현 일정관리 이동버튼 추가-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn5"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/btnCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="일정 보기" />

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn6"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/btnalarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 설정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn7"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:id="@+id/btnmeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="식사시간 설정" />

        <Button
            android:fontFamily="@font/fontshape"
            android:background="@drawable/home_btn8"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:id="@+id/btndrug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="먹는약 설정" />
    </LinearLayout>

</LinearLayout>