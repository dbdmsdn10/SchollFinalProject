<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/alarm_background"
    >

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아침시간"
            android:textSize="20dp"
            />

        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:id="@+id/edbreakfirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="doit"
            android:text="HH:MM"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점심시간"
            android:textSize="20dp"
            />

        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:id="@+id/edlunch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:onClick="doit"
            android:text="HH:MM"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저녁시간"
            android:textSize="20dp"
            />
        <TextView
            android:fontFamily="@font/fontshape"
            android:textColor="#000000"
            android:id="@+id/eddinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HH:MM"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:onClick="doit"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="110dp"
        >

        <Button
            android:layout_marginRight="10dp"
            android:fontFamily="@font/fontshape"
            android:background="@drawable/alarm_btn1"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:id="@+id/btn_mealstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적용"
            android:onClick="doit"/>
        <Button
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fontshape"
            android:background="@drawable/alarm_btn1"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:onClick="doit"/>

    </LinearLayout>

</LinearLayout>