<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/drug_alarm_background"
    >

    <Spinner
        android:fontFamily="@font/fontshape"
        android:id="@+id/drugspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/약종류"
        android:layout_marginBottom="20dp"
        />
    <Spinner
        android:fontFamily="@font/fontshape"
        android:id="@+id/whenspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/개인약설정"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        />
    <TextView
        android:fontFamily="@font/fontshape"
        android:id="@+id/drugtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="터치하여 시간을 설정해 주세요"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:onClick="doit"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:fontFamily="@font/fontshape"
            android:textSize="17sp"
            android:background="@drawable/alarm_btn1"
            android:textColor="#FFFFFF"
            android:id="@+id/btndrugset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="적용"
            android:onClick="doit"/>


    </LinearLayout>

</LinearLayout>